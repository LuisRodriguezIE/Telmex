# import random

def responde(mensaje):
  # El mensaje tiene signo de interrogacion?
  if mensaje.endswith('?'):
  # Regresa una pregunta aleatoria
  return random.choice(respuestas["pregunta"])
  # Regresa una sentencia aleatoria
return random.choice(respuestas["sentencia"])


